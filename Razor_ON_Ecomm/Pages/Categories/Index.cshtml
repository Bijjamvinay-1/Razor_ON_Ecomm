@page
@model Razor_ON_Ecomm.Pages.Categories.IndexModel
@{
    <div class="container">
        <div class="row pt-4 pb-3">
            <div class ="col-6">
                <h2 class="text-primary">
                    Category List
                </h2>
            </div>
            <div class="col-6 text-end">
                <a asp-page="categories/Create" class=" btn btn-warning mx-2 btn-Creat New Category">
                    <i class="bi bi-plus-circle" ;></i> Creat New Category
                </a>
                <i></i>
            </div>
        </div>
<table class=" table table-borderd table-striped">
    <thead>
    <tr>
        <th>    
            Category Name
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>

        @foreach(var obj in Model.CategoryList.OrderBy(u=>u.DisplayOrder))
        {
            <tr>
                <td>@obj.Name</td>
                <td>
                    @obj.DisplayOrder
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                    <a asp-page="category/edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a asp-page="category/Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2 btn-delete">
                        <i class="bi bi-pencil-fill"></i> Delete
                     </a>


                    </div>
                
                </td>
                
                
            </tr>

                    
        }
    </tbody>

</table>
        
           
    
    </div>
}
